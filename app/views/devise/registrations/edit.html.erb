<div class="row justify-content-center">
  <div class="col-3">
    <div class="p-3 mb-2 bg-dark bg-gradient text-white my-background">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <!%= f.label :email %><br />
          <%= f.email_field :email, class:"form-control", placeholder:"name@email.com", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <!%= f.label :password %><br />
          <%= f.password_field :password, class:"form-control", placeholder:"Edit Password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <!%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Current Password", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class:"btn btn-dark btn-lg" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p><strong>Unhappy?</strong><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger btn-lg" %></p>

      <%= link_to "Back", :back, class:"btn btn-lg btn-dark" %>
    </div>
  </div>
</div>

<%= stylesheet_link_tag 'homeworktotal', media: 'all', 'data-turbolinks-track': 'reload' %>
