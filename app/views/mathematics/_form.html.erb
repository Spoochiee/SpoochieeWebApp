<%= form_with(model: mathematic) do |form| %>
  <% if mathematic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mathematic.errors.count, "error") %> prohibited this mathematic from being saved:</h2>

      <ul>
        <% mathematic.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col-sm-10">  
      <div class="field form-group">
        <%= form.text_field :teacher, class:"form-control", placeholder:"Teacher" %>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-10">
      <div class="field form-group">
        <%= form.text_field :description, class:"form-control", placeholder:"Description" %>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-10">
      <div class="field form-group">
        <%= form.text_field :due_date, class:"form-control", placeholder:"Due Date" %>
      </div>
    </div>
  </div>
  
  <div class="row mb-3">
    <div class="col-sm-10">
      <div class="field form-group">
        <%= form.number_field :user_id, id: :mathematic_user_id, class:"form-control", value:current_user.id, type: :hidden %>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-10">
      <div class="actions">
        <%= form.submit class:"btn btn-dark btn-sm"%>
      </div>
    </div>
  </div>
<% end %>
